{
  "name": "burger-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Contoso Burgers API",
  "private": true,
  "type": "module",
  "exports": "./lib/local.js",
  "scripts": {
    "start": "tsx src/server.ts",
    "start:local": "tsx src/local.ts",
    "dev": "tsx watch src/server.ts",
    "dev:local": "tsx watch src/local.ts",
    "build": "tsc",
    "clean": "rimraf lib",
    "update:local-settings": "node ./scripts/update-local-settings.mjs",
    "postinstall": "npm run update:local-settings"
  },
  "keywords": [],
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "dotenv": "^17.0.1",
    "express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22",
    "tsx": "^4",
    "typescript": "^5.8.3"
  }
}
